<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_airport_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icons"
    tools:context="rjobse.mysqliteexample.AirportDetail"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:id="@+id/airportname"
        android:textColor="@color/primary_text"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="@color/secondary_text"
        android:id="@+id/airporticao"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="@color/secondary_text"
        android:id="@+id/airportiso_country"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="@color/secondary_text"
        android:id="@+id/airportDistanceToAmsterdam"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>

    <fragment
        android:id="@+id/fragment_b"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        class="rjobse.mysqliteexample.MapFragment"
        tools:layout="@layout/fragment_map">
    </fragment>
</LinearLayout>
